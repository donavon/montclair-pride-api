{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "types": [], // Keep this empty to avoid global namespace pollution
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "node:async_hooks": ["./node_modules/@types/node/async_hooks.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "worker-configuration.d.ts"]
}
