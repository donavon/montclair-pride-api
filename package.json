{
  "name": "montclair-pride-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "netlify dev",
    "deploy": "netlify deploy",
    "deploy:prod": "netlify deploy --prod",
    "lint": "oxlint --deny-warnings .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt .",
    "fix": "npm run format && npm run lint:fix",
    "format:check": "oxfmt --check .",
    "typecheck": "tsc",
    "ci": "npm run lint && npm run format:check && npm run typecheck"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@netlify/functions": "^5.1.2",
    "@types/node": "^25.3.0",
    "netlify-cli": "^23.15.1",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
}
